<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Clinica.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar-->
            <aside>
                <div class="sidebar">
                    <h3>Clinica</h3>
                    <ul class="nav flex-column">
                        <li class="nav-item @(Context.Request.Path == "/Pacientes" ? "active" : "")">
                            <i class="material-icons">person</i>
                            <a asp-area="" asp-page="/Pacientes">Pacientes</a>
                        </li>

                        <li class="nav-item @(Context.Request.Path == "/Cita" ? "active" : "")">
                            <i class="material-icons">event_note</i>
                            <a asp-area="" asp-page="/Cita">Citas Medicas</a>
                        </li>
                        <li class="nav-item @(Context.Request.Path == "/Procedimiento" ? "active" : "")">
                            <i class="material-icons">healing</i>
                            <a asp-area="" asp-page="/Procedimiento">Procedimientos</a>
                        </li>
                        <li class="nav-item @(Context.Request.Path == "/Reportes" ? "active" : "")">
                            <i class="material-icons">bar_chart</i>
                            <a asp-area="" asp-page="/Reportes">Reportes</a>
                        </li>

                    </ul>
                </div>
            </aside>

            <!-- Contenido -->
            <main class="main-content col-md-9 ml-sm-auto">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>